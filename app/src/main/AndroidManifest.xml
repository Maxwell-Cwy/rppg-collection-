<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== 所有需要的权限（完美适配 Android 6~15） ==================== -->



    <!-- ✅ USB 权限 -->
    <uses-feature android:name="android.hardware.usb.host" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <!-- Android 12+ 新蓝牙权限（推荐写法，不会吓人提示“访问位置”） -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- 兼容 Android 11 及以下的旧蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- 相机 + 麦克风（视频录制必须） -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 网络（上传数据） -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ 读取视频文件 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <!-- 兼容 Android 12 及以下读取视频（只在 12 及以下生效） -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- 可选：如果你以后要后台扫描，可以加这个（目前不需要可删） -->
    <!-- <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> -->

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/home_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="35">

        <!-- 启动页 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主检测界面（之前缺失！） -->
        <!--activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="landscape" /-->
        <activity
            android:name=".DataSelectionActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".StartActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ResultActivity"
            android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartActivity" />
        </activity>

        <!-- 蓝牙设备选择页面 -->
        <activity
            android:name=".DeviceListActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>